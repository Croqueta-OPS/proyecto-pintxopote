<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>The Pintxopo</title>
	<meta charset="utf-8"/>
	<style>
	    .escondido{
	        display:none;
	    }
	    a{
	        text-decoration: none;
	    }
	</style>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js" type="text/javascript"></script>
	<script src="js/mostrarForm.js" type="text/javascript"></script>
	<script src="js/borrarPintxo.js" type="text/javascript"></script>
	<script src="js/formulario-editar.js" type="text/javascript"></script>

</head>
<body>
	<div class="container">
		<a id="mostrarForm" href="#" onclick="mostrarFormulario()">Añadir Pintxo</a>
		<form action="/edita-pintxos" method="post">
		    <label class="escondido">Nombre:</label> <input type="text" name="nombre" class="escondido"><br>
            <label class="escondido">Descripción:</label> <input type="text" name="descripcion" class="escondido">
		   	<button class= "escondido" type="submit"> Añadir </button>
		</form>
		
		<div id="contenido"><!-- Mostrar una lista de pintxos -->
            <ul>
                <% for(var i = 0; i<pintxos.length; i++){ %>
                    <li>
                        <%= pintxos[i].nombre %>
                        <a class="btnBorrar" id = <%= pintxos[i].id %> href="">[Eliminar]</a>
                    	<a class="btnEditar" id = <%= pintxos[i].id %> href="#">[Editar]</a>
                    </li>
                <% } %>
            </ul>
    	</div>
    	<div class="formulario-editar"></div>
	</div>
</body>
</html>